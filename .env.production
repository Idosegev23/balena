# Production Environment Variables
# This file shows the required environment variables for production
# Set these in your deployment platform (Vercel, Railway, etc.)

# Application Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-production-domain.com

# Supabase Configuration (PUBLIC - safe to expose)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Server-side only keys (PRIVATE - must be set in hosting platform)
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Production Rate Limiting
SCRAPER_DELAY_MIN=3000
SCRAPER_DELAY_MAX=7000
CLAUDE_RATE_LIMIT_RPM=30
CLAUDE_MAX_TOKENS=4096

# Security
SESSION_SECRET=your_secure_session_secret_here
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Monitoring
LOG_LEVEL=warn
ENABLE_SCREENSHOTS_ON_ERROR=false